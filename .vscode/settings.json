{
  // ===== Theme & Icons =====
  "workbench.colorTheme": "Visual Assist Dark Theme",
  "workbench.iconTheme": "material-icon-theme",

  // ===== Font & Editor =====
  "editor.fontFamily": "'Cascadia Code', 'Fira Code', 'Consolas', 'monospace'",
  "editor.fontSize": 13,
  "editor.fontLigatures": true,
  "editor.lineHeight": 1.5,
  "editor.renderWhitespace": "boundary",
  "editor.renderControlCharacters": true,
  "editor.smoothScrolling": true,
  "editor.cursorBlinking": "smooth",
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.minimap.enabled": false,

  // ===== IntelliSense & Languages =====
  "editor.suggestSelection": "first",
  "editor.quickSuggestions": {
    "strings": true
  },
  "editor.parameterHints.enabled": true,
  "editor.hover.enabled": "on",
  "C_Cpp.intelliSenseEngine": "default",
  "C_Cpp.default.intelliSenseMode": "gcc-x64",
  "C_Cpp.default.compilerPath": "C:/mingw/bin/gcc.exe", // Adjust path if needed
  "files.associations": {
    "*.asm": "asm",
    "*.s": "asm",
    "*.S": "asm",
    "register_allocation.h": "c",
    "intermediate_representation.h": "c"
  },

  // ===== Files & Explorer =====
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  "files.autoSave": "onFocusChange",
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,

  // ===== Terminal =====
  "terminal.integrated.fontFamily": "Cascadia Code",
  "terminal.integrated.fontSize": 13,
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.smoothScrolling": true,
  "terminal.integrated.defaultProfile.windows": "MinGW",
  "terminal.integrated.profiles": {
    "MinGW": {
      "path": "C:/mingw/bin/bash.exe", // or "C:/mingw64/bin/bash.exe" if using MSYS2
      "args": ["--login", "-i"]
    }
  },
  "terminal.integrated.defaultLocation": "editor", // Dock on the right side

  // ===== Clean UI =====
  "window.zoomLevel": 0,
  "breadcrumbs.enabled": true,
  "workbench.statusBar.visible": true,
  "workbench.startupEditor": "none",
  "workbench.editor.highlightModifiedTabs": true,

  // ===== Extensions Recommendations =====
  "extensions.ignoreRecommendations": false,
  "extensions.showRecommendationsOnlyOnDemand": false
}
